@model FullCategory

<form method="post" asp-action="CreatePOST">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">
				Create Category
			</h2>
		</div>

		<div class="mb-3">
			<label asp-for="@Model.Category.Name"></label>
			<input asp-for="@Model.Category.Name" class="form-control"/>
			<span asp-validation-for="@Model.Category.Name" class="text-danger"></span>
		</div>

		<div class="mb-3">
			<label asp-for="@Model.Category.DisplayOrder"></label>
			<input asp-for="@Model.Category.DisplayOrder" class="form-control"/>
			<span asp-validation-for="@Model.Category.DisplayOrder" class="text-danger"></span>
		</div>
		
		<div class="mb-3">

			<ul>
				@foreach(var movie in Model.Movies){
					<li>
						<input type="checkbox" id=@movie.Id/>
						<label> @movie.MovieName</label>
						<input type="hidden" asp-for="@movie.Rating" />
						<input type="hidden" asp-for="@movie.MovieImgUrl" />    
						<input type="hidden" asp-for="@movie.Id" />    
						<input type="hidden" asp-for="@movie.MovieName" />    
					</li>
				}
			</ul>
		</div>

		<button type"submit" class="btn btn-primary" style="width=150px">Create</button>
		<a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width=150px">
			Return
		</a>
	</div>
</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />

	}
}