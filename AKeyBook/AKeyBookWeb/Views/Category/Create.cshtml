@model Category

<form method="post" asp-action="CreatePOST">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">
				Create Category
			</h2>
		</div>

		<div class="mb-3">
			<label asp-for="@Model.Name"></label>
			<input asp-for="@Model.Name" class="form-control"/>
			<span asp-validation-for="@Model.Name" class="text-danger"></span>
		</div>

		<div class="mb-3">
			<label asp-for="@Model.DisplayOrder"></label>
			<input asp-for="@Model.DisplayOrder" class="form-control"/>
			<span asp-validation-for="@Model.DisplayOrder" class="text-danger"></span>
		</div>
		<button type"submit" class="btn btn-primary" style="width:150px">Create</button>
		<a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width=150px">
			Return
		</a>
	</div>
</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />

	}
}