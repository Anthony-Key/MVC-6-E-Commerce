@using AKeyBookWeb.ViewModels
@model Movie

<form method="post" asp-action="CreateBase">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">
				Edit Category
			</h2>
		</div>

		<div class="mb-3">
			<label asp-for="MovieName"></label>
			<input asp-for="MovieName" class="form-control"/>
			<span asp-validation-for="MovieName" class="text-danger"></span>
		</div>

		<div class="mb-3">
			<label asp-for="Rating"></label>
			<input asp-for="Rating" class="form-control"/>
			<span asp-validation-for="Rating" class="text-danger"></span>
		</div>

		<button type"submit" class="btn btn-primary" style="width:150px">Update</button>
		<a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width=150px">
			Return
		</a>
	</div>
</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}