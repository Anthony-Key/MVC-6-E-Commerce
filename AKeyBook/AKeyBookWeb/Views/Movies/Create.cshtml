@using AKeyBookWeb.ViewModels
@model MovieCategory

@using (Html.BeginForm("CreatePOST", "Movies", FormMethod.Post)){
	<table cellpadding="0" cellspacing="0">
            <tr>
                <th colspan="2" align="center">Person Details</th>
            </tr>
            <tr>
                <td>Movie Name: </td>
                <td>
                    @Html.TextBoxFor(m => m.movie.MovieName)
                </td>
            </tr>
            <tr>
                <td>Rating: </td>
                <td>
                    @Html.TextBoxFor(m => m.movie.Rating)
                </td>
            </tr>
            <tr>
                <td>Movies: </td>
                <td>

				@for (int i=0; i< Model.categories.Count; i++)
{
			<div class="text-center">
			<label asp-for="@Model.categories[i"></label>
			</div>
}

                </td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Submit"/></td>
            </tr>
        </table>
}

