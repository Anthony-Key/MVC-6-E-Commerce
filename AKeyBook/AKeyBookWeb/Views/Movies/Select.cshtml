@using AKeyBookWeb.ViewModels
@model MovieCategory

@using (@Html.BeginForm("CreatePOST", "Movies", FormMethod.Post))
{
    for (int i = 0; i <Model.categories.Count(); i++)
    {
        @Html.HiddenFor(m => m.categories[i].Id)
        @Html.HiddenFor(m => m.categories[i].Movies)
        @Html.HiddenFor(m => m.categories[i].Rating)
        @Html.HiddenFor(m => m.categories[i].Name)
        @Html.HiddenFor(m => m.categories[i].CreatedDateTime)
        @Html.CheckBoxFor(m => m.categories[i].selected)
        @Html.DisplayFor(m => m.categories[i].Name)
    }

    <input type="submit" class="btn btn-primary" value="Submit" />
}

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}